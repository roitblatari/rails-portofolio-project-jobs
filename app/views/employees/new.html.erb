<h1>Please sign up</h1>

<% if @employee.errors.any? %>
 <div id="error_explanation">
   <h2>
     <%= pluralize(@employee.errors.count, "error") %>
     prohibited this employee from being saved:
   </h2>

   <ul>
   <% @employee.errors.full_messages.each do |msg| %>
     <li><%= msg %></li>
   <% end %>
   </ul>
 </div>
<% end %>

<%= form_for(@employee) do |f|%>
  <p> name: <%= f.text_field :name %></p>
  <p> email: <%= f.text_field :email %></p>
  <p> profession: <%= f.text_field :profession %></p>
  <p> password: <%= f.password_field :password  %></p>
  <%= f.submit %>
<% end %>
<h2><%= link_to 'Or Login Here', signin_employee_path %>  </h2>
